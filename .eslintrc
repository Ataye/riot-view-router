{
  "root": true,
  "parser": "babel-eslint",
  "plugins": ["riot"],
  "rules": {
    "object-curly-spacing": ["error", "always"],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxBOF": 1 }],
    "semi": ["error", "never"],
    "no-unused-vars": ["error", "always"],
    "space-before-blocks": ["error", "always"]
  },
  "globals": {
    "riot": true,
    "window": true
  }
}
